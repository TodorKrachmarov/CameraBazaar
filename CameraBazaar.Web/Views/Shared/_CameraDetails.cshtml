@model CameraDetailsServiceModel

<dl class="dl-horizontal">
    <dt>Is Full Frame:</dt>
    <dd>@Model.IsFullFrame</dd>
    <dt>Min Shutter Speed:</dt>
    <dd>@Model.MinShutterSpeed</dd>
    <dt>Max Shutter Speed:</dt>
    <dd>1/@Model.MaxShutterSpeed</dd>
    <dt>Min ISO:</dt>
    <dd>@Model.MinISO</dd>
    <dt>Max ISO</dt>
    <dd>@Model.MaxISO</dd>
    <dt>Video Resolution:</dt>
    <dd>@Model.VideoResolution</dd>
    <dt>Light Metering:</dt>
    @foreach (var light in Model.LightMetering)
    {
        <dd>- @light</dd>
    }
    <dt>Description:</dt>
    <dd>@Model.Description</dd>
</dl>
